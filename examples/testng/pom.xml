      <dependency>
         <groupId>javax.mail</groupId> 
         <artifactId>mail</artifactId> 
         <version>1.4.1</version> 
         <scope>test</scope>
      </dependency>

      <dependency>
         <groupId>org.testng</groupId>
         <artifactId>testng</artifactId>
         <classifier>jdk15</classifier>
         <scope>test</scope>
      </dependency>

   </dependencies>

</project>
